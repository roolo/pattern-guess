<h1>Listing patterns</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>Guess state</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @patterns.each do |pattern| %>
      <tr>
        <td><%= pattern.content %></td>
        <td><%= pattern.guess_state %></td>
        <td><%= link_to 'Show', pattern %></td>
        <td><%= link_to 'Edit', edit_pattern_path(pattern) %></td>
        <td><%= link_to 'Destroy', pattern, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pattern', url_for(action: :create, pattern: {create: :auto}), method: :post %>
